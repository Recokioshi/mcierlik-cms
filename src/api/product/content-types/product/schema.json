{
  "kind": "collectionType",
  "collectionName": "products",
  "info": {
    "singularName": "product",
    "pluralName": "products",
    "displayName": "Product",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "name": {
      "type": "string",
      "required": true,
      "unique": true
    },
    "isActive": {
      "type": "boolean",
      "default": true,
      "required": true
    },
    "saleFrom": {
      "type": "datetime"
    },
    "price": {
      "type": "decimal",
      "required": true,
      "min": 0
    },
    "photo": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": [
        "images",
        "files",
        "videos",
        "audios"
      ]
    },
    "shortDescription": {
      "type": "string",
      "required": true
    },
    "fullDescription": {
      "type": "text",
      "required": true
    },
    "features": {
      "type": "json"
    },
    "colors": {
      "type": "json"
    },
    "gallery": {
      "allowedTypes": [
        "images",
        "files",
        "videos",
        "audios"
      ],
      "type": "media",
      "multiple": true
    }
  }
}
